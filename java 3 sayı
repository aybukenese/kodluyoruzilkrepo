import java.util.Scanner;
import java.util.Arrays;

public class SayiSirala {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Kullanıcıdan üç sayı al
        System.out.print("Birinci sayıyı giriniz: ");
        int sayi1 = scanner.nextInt();

        System.out.print("İkinci sayıyı giriniz: ");
        int sayi2 = scanner.nextInt();

        System.out.print("Üçüncü sayıyı giriniz: ");
        int sayi3 = scanner.nextInt();

        // Sayıları bir diziye koy ve sıralamak için Arrays.sort() kullan
        int[] sayilar = { sayi1, sayi2, sayi3 };
        Arrays.sort(sayilar);

        // Sıralanmış sayıları yazdır
        System.out.println("Sayılar küçükten büyüğe: " + Arrays.toString(sayilar));
    }
}
