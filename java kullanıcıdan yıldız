import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        // Scanner nesnesi ile kullanıcıdan basamak sayısını alıyoruz
        Scanner sc = new Scanner(System.in);
        
        System.out.print("Basamak Sayısı : ");
        int basamakSayisi = sc.nextInt(); // Kullanıcıdan basamak sayısını alıyoruz
        
        // Yıldızları yazdıracak döngüyü başlatıyoruz
        for (int i = basamakSayisi; i >= 1; i--) {
            // Her satırda 'i' kadar yıldız yazdırıyoruz
            for (int j = 1; j <= i; j++) {
                System.out.print("*");
            }
            // Her satırın sonunda bir alt satıra geçiyoruz
            System.out.println();
        }
    }
}
